<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="476.0" prefWidth="655.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MainPage">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <children>
      <GridPane fx:id="menu" alignment="TOP_CENTER">
          <Label fx:id="welcome" text="Welcome" GridPane.columnIndex="0" GridPane.rowIndex="0" />

          <Button fx:id="homeButton" text="Home" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

          <Button fx:id="ordersButton" text="Orders" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

          <Button fx:id="productsButton" text="Products" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

          <Button fx:id="clientsButton" text="Clients" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints valignment="CENTER" />
         </rowConstraints>

      </GridPane>
        <Button fx:id="signOutButton" onAction="#signOut" text="Sign Out"/>
    </children>

    <stylesheets>
        <URL value="@MainPageStyle.css" />
    </stylesheets>
</VBox>
